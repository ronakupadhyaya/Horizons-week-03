<!DOCTYPE html>
<html>
<head>
  <title>User Profile</title>

  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">

  <style>
    body { background-color: #2ECC71; padding-top: 2em;}
  </style>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
  <!--   panel body -->
       <div class="panel panel-default">
         <div class="panel-body">
           {{#if errors}}
             {{#each errors}}
               <div class="alert alert-danger">{{msg}}</div>
             {{/each}}
           {{/if}}
          <form class="form-horizontal" action="/register" method="post">
            <div class="form-group">
              <label class="col-sm-3 control-label">First Name</label>
              <div class="col-sm-9">
                 <p class="form-control-static">{{firstName}}</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Middle initial</label>
              <div class="col-sm-9">
                 <p class="form-control-static">{{middleInitial}}</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Last Name</label>
              <div class="col-sm-9">
                 <p class="form-control-static">{{lastName}}</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Date of birth</label>
              <div class="col-sm-9">
                 <p class="form-control-static">{{dateOfBirth}}</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">password</label>
              <div class="col-sm-9">
                 <p class="form-control-static">{{password}}</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">gender</label>
              <div class="col-sm-9">
                 <p class="form-control-static">{{gender}}</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Sign Up for newsletter</label>
              <div class="col-sm-9">
                <p class="form-control-static">{{email}}</p>
              </div>
            </div>
    <!--         bio -->
            <div class="form-group">
              <label class="col-sm-3 control-label">Bio</label>
              <div class="col-sm-9">
                 <p class="form-control-static">{{bio}}</p>
              </div>
            </div>
          </form>
        </div>
       </div>
     </div>
   </div>
  </div>
</body>
</html>
