<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>AJAX Counter</title>
  </head>
  <body>
    <h1>Count: <span id="count">{{count}}</span></h1>
    <form action="/up" method="post">
      <input id="up" type="submit" value="Up">
    </form>
    <form action="/down" method="post">
      <input id="down" type="submit" value="Down">
    </form>

    <script src="/jquery.js"></script>
    <script>
      // YOUR CODE HERE
      $('#up, #down').on('click', function(event){
        event.preventDefault();  //make the button not working
        var count = $("#count").val();
        $.ajax({
          method: 'post',
          url: '/' + $(this).val(),  //either up or down
          success: function(res){
            $('#count').text(res.count);
          }
        })
      })
    </script>
  </body>
</html>
