<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>AJAX Counter</title>
  </head>
  <body>
    <h1>Count: <span id="count">{{count}}</span></h1>
    <form action="/up" method="post">
      <input id="up" type="submit" value="Up">
    </form>
    <form action="/down" method="post">
      <input id="down" type="submit" value="Down">
    </form>

    <script src="/jquery.js"></script>
    <script>
      // YOUR CODE HERE
      $('#up').on('click', function(event){
        event.preventDefault();
        var counted = $('#count').text();
        counted++;
        $.ajax({
          url: "/up",
          method: "post",
          data: {
            count: counted
          },
          success: function(result){
            console.log("success", counted, count)
            $('#count').text(result.count)
          }
        })
      })
      $('#down').on('click', function(event){
        event.preventDefault();
        var counted = $('#count').text();
        counted--;
        $.ajax({
          url: "/down",
          method: "post",
          data: {
            count: counted
          },
          success: function(result){
            console.log("success", counted, count)
            $('#count').text(result.count)
          }
        })
      })
    </script>
  </body>
</html>
