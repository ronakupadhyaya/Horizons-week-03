<form id="create-form" method="POST" action="/new">
  <div class="col-xs-12 text-center">
    <input type="text" value="{{title}}" name="title" placeholder="title...">
  </div><div class="col-xs-12 text-center">
    <input type="text" value="{{goal}}" name="goal" placeholder="$ goal...">
    <!-- <div class="input-group text-center">
      <span class="input-group-addon">$</span>
    </div> -->
  </div><div class="col-xs-12 text-center">
    <textarea name="description" placeholder="description..." rows="4">
      {{description}}
    </textarea>
  </div><div class="col-xs-12 text-center">
    <input type="date" value="{{start}}" name="start" placeholder="start date">
  </div><div class="col-xs-12 text-center">
    <input type="date" value="{{end}}" name="end" placeholder="end date">
  </div><div class="col-xs-12 text-center">
