
<div id="header" class="text-center">
  <h1>projects</h1>
  <div class="dropdown">
    <button class="btn dropdown-toggle" type="button" id="dropdownMenu1"
      data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      Sort
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
      <li><a href="/sort?sort=title&amp;sortDirection=ascending">Title</a></li>
      <li><a href="/sort?sort=goal&amp;sortDirection=ascending" name="sort" value="goal">Goal</a></li>
      <li><a href="/sort?sort=start&amp;sortDirection=ascending" name="sort" value="start">Start</a></li>
      <li><a href="/sort?sort=end&amp;sortDirection=ascending" name="sort" value="end">End</a></li>
      <li><a href="/?sort?sort=category&amp;sortDirection=ascending" name="sort" value="cateogory">Category</a></li>
    </ul>
  </div>
  <div class="dropdown">
    <button class="btn dropdown-toggle" type="button" id="dropdownMenu2"
      data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      Order
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2">
      <li><a href="/sort?sort=goal&amp;sortDirection=ascending" name="sortDirection" value="ascending">Ascending</a></li>
      <li><a href="/sort?sort=goal&amp;sortDirection=descending" name="sortDirection" value="ascending">Descending</a></li>
    </ul>
  </div>

</div><div id="footer" class="text-center">
  <a id="new-project" href='/new'>create new project</a>
</div>

<!-- Part 1: View all projects -->
<div class="all-projects">
  {{#each items}}
    <div class="project text-center">
      <div class="name">
        <a href="/project/{{this._id}}">{{this.title}}</a>
        <h4>Goal: ${{this.goal}}</h4>
      </div>
      <div class="dates">
        <h6>from {{this.start}}</h6>
        <h6>to {{this.end}}</h6>
      </div>
      <h5>{{this.description}}
      <h4 class="text-center">{{this.category}}</h4>
    </div>
  {{/each}}
</div>

<!-- Part 2: Create new project -->


