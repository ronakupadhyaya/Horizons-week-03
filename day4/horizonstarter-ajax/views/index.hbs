<div class="container-fluid">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 btn-group" id="posts">
      {{#each items}}
      <div class="">
        <a class="btn-block btn-group-vertical" href="/project/{{_id}}" >

            <button class = "btn btn-success" type="submit" name="button"> {{#if image}} <img src="{{image}}" style="width: 20%; height: 20%;"> {{/if}}{{title}}</button> </a>
      </div>
      {{/each}}
    </div>
  </div>

  <div class="row">
    <div class="">
      <a href="http://localhost:3000/new">Create new project</a>
    </div>
  </div>
  <form method="get" action="/">
    <select name="sort" id="sort">
      <option></option>
      <option>start</option>
      <option>end</option>
      <option>goal</option>
      <option>Total Contributions</option>
    </select>
    <select name="sortDirection" id="sortDirection">
      <option></option>
      <option>Ascending</option>
      <option>Descending</option>
    </select>
    <select name="funded" id="funded">
      <option></option>
      <option>Funded</option>
      <option>In Progress</option>
    </select>
    <input type="submit" value="Filter" id="filter">
  </form>
  <a href="/"> <input class="black-text" type="submit" value="Show all" id="showAll"></a>
</div>

<script
  src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
  crossorigin="anonymous"></script>
<script type="text/javascript" src="/js/project.js"></script>


