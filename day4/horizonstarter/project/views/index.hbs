<script src="/js/filters.js"></script>

<h1>{{title}}</h1>

<div class="filters">
  Filter:
  <div class="btn-group" role="group">
    <div class="btn-group" role="group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        By Status <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><a href="#" id="status1">All</a></li>
        <li><a href="#" id="status2">Not fully funded</a></li>
        <li><a href="#" id="status3">Fully funded</a></li>
      </ul>
    </div>
    <div class="btn-group" role="group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        By Goal <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><a href="#" id="goal1">All</a></li>
        <li><a href="#" id="goal2">&gt; $10</a></li>
        <li><a href="#" id="goal3">&gt; $100</a></li>
        <li><a href="#" id="goal4">&gt; $1,000</a></li>
        <li><a href="#" id="goal5">&gt; $10,000</a></li>
      </ul>
    </div>
  </div>
</div>

<div id="projectsAnchor">
  {{#each projects}}
    <div class="well">
      <h2>Title: {{title}}</h2>
      <h3>Description: {{description}}</h3>
        <a href="/project/{{id}}">View project</a>
    </div>
  {{/each}}
</div>

<a href="/new">Create a new project</a>
