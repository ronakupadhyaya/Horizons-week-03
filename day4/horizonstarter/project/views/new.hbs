<form class="form-inline" method="post">
  <div class="form-group">
    <label class="sr-only">Project title</label>
    <input type="text" class="form-control" name="title" placeholder="Title">
  </div>
   <div class="form-group">
    <label class="sr-only">Description</label>
    <input type="text" class="form-control" name="description" placeholder="Description">
  </div>
  <div class="form-group">
    <label class="sr-only" for="exampleInputAmount">Goal (in dollars)</label>
    <div class="input-group">
      <div class="input-group-addon">$</div>
      <input type="text" class="form-control" placeholder="Goal (in dollars)" name="goal">
      <div class="input-group-addon">.00</div>
    </div>
  </div>
  <button type="submit" class="btn btn-default">Create projects</button>
</form>
