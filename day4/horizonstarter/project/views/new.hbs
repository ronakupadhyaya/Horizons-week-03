<form class="form-inline-row" method="post">
  <div class="form-group">
    <label class="sr-only">Project title</label>
    <input type="text" class="form-control" placeholder="Title" name="title">
  </div>
  <div class="form-group">
    <label class="sr-only">Description</label>
    <input type="text" class="form-control" placeholder="Description" name="description">
  </div>
  <div class="form-group">
    <label class="sr-only" for="exampleInputAmount">Goal (in dollars)</label>
      <div class="input-group">
        <div class="input-group-addon">$</div>
        <input type="text" class="form-control" placeholder="Goal (in dollars)" name="goal">
        <div class="input-group-addon">.00</div>
      </div>
  </div>
  <select class="form-control">
    <label class="sr-only" name="category">Category</label>
      <option>Art</option>
      <option>Technology</option>
      <option>Food</option>
      <option>Health</option>
      <option>Other cuz i'm a fucktard</option>
  </select>

  <button type="submit" class="btn btn-primary">Create post</button>
</form>
