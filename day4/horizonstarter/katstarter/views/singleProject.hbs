<h1>
	Project: {{project.title}}
</h1>

<h2>
	Category: {{project.category}}
</h2>

<h2>
	Goal: ${{project.goal}}
</h2>

<h2>
	Total: ${{project.total}}
</h2>

<h2>
	Description: {{project.description}}
</h2>

<h2>
	Start date: {{project.start}}
</h2>

<h2>
	End date: {{project.end}}
</h2>

<h2>
	Contributions: {{#each project.contrib}}
						<div class='projects'>
							<h2>{{name}} contributed ${{amount}}</h2>
							<h3>---{{comment}}</h3>
						</div>
					{{/each}} 	
</h2>

<form method="post">
	<h3>Contribute to this project:</h3>
	<div class="form-group">
	  <input type="text" class="form-control" name="name" id="name" placeholder="Your Name">
	</div>
	<div class="form-group">
	  <input type="text" class="form-control" name="comment" id="comment" placeholder="Comment">
	</div>
	<div class="input-group">
	  <div class="input-group-addon">$</div>
	  <input type="number" name="amount" id="amount" placeholder="Amount" class="form-control">
	  <div class="input-group-addon">.00</div>
	</div>
	<br>
	<div><input type="submit"></h2>
</form>
<div>
	<a href='/katstarter'>Back to all projects</a>
</div>