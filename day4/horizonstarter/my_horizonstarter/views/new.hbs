<h2>Create Project</h2> <br>

<div class="alert alert-danger" role="alert">
	<ul>
		{{#each errors}}
			<li>Error: {{msg}}</li>
		{{/each}}
	</ul>
</div>

<form method="post">

	<div class="form-group">
		<label for="title">Project title</label>
		<input name="title" type="text" class="form-control"placeholder="Project title">
	</div>

	<div class="form-group">
		<label for="description">Description</label>
		<textarea name="description" type="email" class="form-control"placeholder="Description"></textarea>
	</div>

	<div class="form-group">
		<label for="category">Category</label>
		<select name="category"class="form-control">
			<option>Famous Muppet Frogs</option>
			<option>Current Black Presidents</option>
			<option>The Pen Is Mightier</option>
			<option>Famous Mothers</option>
			<option>Drummers Named Ringo</option>
			<option>1-Letter Words</option>
			<option>Months That Start With "Feb"</option>
			<option>How Many Fingers Am I Holding Up</option>
			<option>Potent Potables</option>
		</select>
	</div>

	<div class="form-group">
		<label for="amount">Fundraising goal</label>
		<div class="input-group">
			<div class="input-group-addon">$</div>
			<input name="goal" type="text" class="form-control" placeholder="Amount" value>
			<div class="input-group-addon">.00</div>
		</div>
	</div>

	<div class="form-group">
        <label for="start">Start date</label>
        <input type="date" class="form-control" id="start" name="start" value="">
    </div>

    <div class="form-group">
        <label for="end">End date</label>
        <input type="date" class="form-control" id="end" name="end" value="">
    </div>

	<button type="submit" class="btn btn-primary">Create</button>
</form>


