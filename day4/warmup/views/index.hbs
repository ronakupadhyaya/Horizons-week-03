    <!-- Task 1
      Create a form with a button than when clicked sends a POST request
      to /decrement

      The button should say "Increase" on it.
    -->

    <form method="POST" action="/increment">
      <button type="submit">Increment</button>
    </form>

    <!-- Task 2
      Create a form with a button than when clicked sends a POST request
      to /decrement

      The button should say "Decrease" on it.
    -->
    <form method="POST" action="/decrement">
      <button type="submit">Decrement</button>
    </form>
  </body>
