<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Time machine</title>
  </head>
  <body>
    <form>
      From

      <!-- Make this element change based on the 'when' query parameter -->
      <input type="date" value="{{when}}" name='when'>

      to

      <!-- Make this element change based on the 'amount' query parameter -->
      <input type="number" min="0" value="{{amount}}" name='amount'>

      <!-- Make this element change based on the 'units' query parameter -->
      <select name="units" value={{units}}>
        {{{selected units}}}
      </select>

      <input type="submit" name="action" value="to the future!">
      <input type="submit" name="action" value="to the past">
    </form>
  </body>
</html>
