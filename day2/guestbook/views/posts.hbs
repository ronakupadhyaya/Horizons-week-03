<body>
<h1>View all posts</h1>
  <div> Your username: {{username}}</div>
<!-- Iterate over al the posts using {{#each posts}} {{title}} {{/each}} to
display them on the page. Add a couple of buttons to sort ascending/descending
and to create new post! -->

<!-- YOUR CODE HERE -->


<div>
  {{#each posts}}
<h1> Hello </h1>
<h1>{{this.title}}</h1>
<h2>{{this.body}}</h2>
<h2>{{this.author}}</h2>
<h2>{{this.date}}</h2>
{{/each}}
</div>

{{#each comments}}
 <h2><a href="/posts/{{../permalink}}#{{id}}">{{title}}</a></h2>
 <div>{{body}}</div>
 {{/each}}
