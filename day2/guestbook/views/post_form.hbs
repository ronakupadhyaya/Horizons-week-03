  <!-- Part 3: Create post  -->
  <!--
    Add an HTML form here with `method="POST"` and `action="/posts"`.
    This login form should have input elements for title, body and date and a submit button.
  -->
  <!-- YOUR CODE HERE -->
  <form action="/posts" method="POST" role="form" class="form-horizontal">
  
    <div class="form-group">
      <label class="control-label col-sm-2">Title</label>
      <div class="col-sm-4">
        <input type="text" class="form-control" id="" name="title">
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2">Text</label>
      <div class="col-sm-4">
        <input type="text" class="form-control" id="" name="text">
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2">date</label>
      <div class="col-sm-4">
        <input type="date" class="form-control" id="" name="date">
      </div>
    </div>

    <button type="submit" class="btn btn-primary col-sm-offset-2  ">Submit</button>
  
  </form>

