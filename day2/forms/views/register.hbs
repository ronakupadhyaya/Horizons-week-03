<!DOCTYPE html>
<html>

<head>
  <title>Registration</title>

  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">

  <style>
    body {
      background-color: #2ECC71;
      padding-top: 2em;
    }
  </style>
</head>

<body>

  <div class="container col-xs-6 col-xs-offset-3">
    <div class="well">
      <form action="/register" method="post">
        <h1>{{header}}</h1>
        <div>
          {{#each errors}}
            <p><strong>{{this.msg}}</strong></p>
          {{/each}}
        </div>
        <!-- <div class="form-group row"> -->
        <label for="example-text-input" class="col-2 col-form-label">First Name</label>
        <div class="col-10">
          <input class="form-control" type="text" placeholder="First Name" name="firstName" required>
        </div>
        <!-- </div> -->
        <!-- <div class="form-group row"> -->
        <label for="example-email-input" class="col-2 col-form-label">Middle Initial</label>
        <div class="col-10">
          <input class="form-control" type="text" placeholder="Middle Initial" name="middleInitial">
        </div>
        <!-- </div> -->
        <!-- <div class="form-group row"> -->
        <label for="example-search-input" class="col-2 col-form-label">Last Name</label>
        <div class="col-10">
          <input class="form-control" type="text" placeholder="Last Name" name="lastName" required>
        </div>
        <!-- </div> -->
        <!-- <div class="form-group row"> -->
        <label for="sel1">DOB Month</label>
        <select class="form-control" name=dobMonth>
          {{#each months}}
          <option>{{this}}</option>
          {{/each}}
        </select>
        <!-- </div> -->
        <!-- <div class="form-group row"> -->
        <label for="sel1">DOB Day</label>
        <select class="form-control" name="dobDay">
          {{#each days}}
          <option>{{this}}</option>
          {{/each}}
        </select>
        <!-- </div> -->
        <!-- <div class="form-group row"> -->
        <label for="example-search-input" class="col-2 col-form-label">DOB Year</label>
        <div class="col-10">
          <input class="form-control" type="text" placeholder="2016" name="dobYear">
        </div>
        <!-- </div> -->
        <!-- <div class="form-group row"> -->
        <label for="example-search-input" class="col-2 col-form-label">Password</label>
        <div class="col-10">
          <input class="form-control" type="password" placeholder="Password" name="password" password>
        </div>
        <!-- </div> -->
        <!-- <div class="form-group row"> -->
        <label for="example-text-input" class="col-2 col-form-label">Repeat Password</label>
        <div class="col-10">
          <input class="form-control" type="password" placeholder="Repeat Password" name="repeatPassword" password>
        </div>
        <!-- </div> -->
        <!-- <div class="form-group row"> -->
        <label for="example-search-input" class="col-2 col-form-label">Gender</label>
        <div class="form-check">
          <label class="form-check-label">
            <input class="form-check-input" type="radio" name="genderRadios" value="male" required>
            Male
          </label>
        </div>
        <div class="form-check">
          <label class="form-check-label">
            <input class="form-check-input" type="radio" name="genderRadios" value="female">
            Female
          </label>
        </div>
        <div class="form-check disabled">
          <label class="form-check-label">
            <input class="form-check-input" type="radio" name="genderRadios" value="helicopter">
            Rather not say
          </label>
        </div>
        <!-- </div> -->
        <!-- <div class="form-group row"> -->
        <label for="example-search-input" class="col-2 col-form-label">Newsletter?</label>
        <div class="form-check">
          <label class="form-check-label">
        <input class="form-check-input" type="checkbox" name="subCheckbox" value="sub" required>
      </label>
        </div>
        <!-- </div> -->
        <!-- <div class="form-group row"> -->
        <label for="example-search-input" class="col-2 col-form-label">Bio</label>
        <div class="col-10">
          <input class="form-control" type="text" placeholder="Bio" name="bio">
        </div>
        <!-- </div> -->
        <!-- <div class="form-group row"> -->
        <div class="col-10">
          <input class="form-control" type="text" value="{{currentDate}}" style="display:none" name="hiddenDate">
        </div>
        <label></label>
        <div>
          <input type="submit" class="btn btn-primary">
        </div>
        <!-- </div> -->
      </form>
    </div>
  </div>
</body>

</html>
