<form action="/login" method = "post">
  User: <input type="text" name="user" >
  Password: <input type="password" name="secret" value="">
  <input type="submit" value="Submit">
  {{#if success}} 
  	<h1> Hi {{name}}!</h1>
  {{/if}}
  {{#if failure}}	 
  	<h1 style="color:red"> Error, invalid credentials </h1>	
  {{/if}}
</form>


