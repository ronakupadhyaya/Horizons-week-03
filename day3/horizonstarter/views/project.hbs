
<!-- Part 3: View a single project -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<h3>{{project.title}}</h3>
<h4>Fundraising Goal: {{project.goal}}</h4>
<h4>Made So Far: {{total}}</h4>
{{project.description}}
<div class="category">
  Category: {{project.category}}
</div>
<div >
    Start date: {{this.start}}
    End date: {{this.end}}
</div> <br>

<a href="/project/{{project._id}}/edit">Edit</a>

<!-- Part 4: Contribute to a project -->
<div id='contribute'>
  {{error}}
  Want to contribute?
  <form action='/project/{{project._id}}' method="post">
    <label for="name"> Name </label>
    <input id='contribution-name' type="text" name="name" value="">
    <label for="amount"> Amount </label>
    <input id='contribution-amount' type="text" name="amount" value="">
    <button value='{{project._id}}' id="send-contribution" class="btn"> Contribute! </button>
  <form>
</div>

<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="{{total}}"
  aria-valuemin="0" aria-valuemax="{{project.goal}}" style="width:{{percent}}%">
    <span class="sr-only"></span>
  </div>
</div>

<div>
  {{#each contributions}}
    <div>
      <h3>{{this.name}}</h3>
      {{this.amount}}
    </div><br>
  {{/each}}
</div>


<script src="/js/contributions.js"></script>
