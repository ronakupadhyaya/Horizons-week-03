

<!-- Exercise 3: View a single project -->
<div class="container">
  <h1>View Project</h1>
  <div><a class="btn btn-default" href="/">Back to Project List</a>
    <a class="btn btn-default" href="/project/{{_id}}/edit">Edit Project</a>
</div>

  <div class="row well">
    <div><h3>{{title}}</h3></div>
    <div><b>Category: {{category}}</b></div>
    <div><b>Description: <i>{{description}}</i></b></div>
    <div><b>Goal: </b>${{goal}}</div>
    <div><b>Start date: </b>{{start}}</div>
    <div><b>End date: </b>{{end}}</div>
    <div><b>Goal progress bar:</b></div>
    <div class="progress">
      <div class="progress-bar" role="progressbar"
        aria-valuemin="0" aria-valuemax="100" style="width:{{progress}}">
      <span class="sr-only">70% Complete</span>
    </div>
  </div>
  <div>{{#each contributions}}<div><b>{{this.name}}:</b> {{this.amount}}</div>{{/each}}</div>
  </div>
</div>

