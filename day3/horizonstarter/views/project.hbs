<h1>View Project</h1>

<!-- Exercise 3: View a single project -->

<body>
  <div class = "form group">
  <label class="col-sm-2 control-label">Title</label>
  <div class="col-sm-10 form-control" > {{project.title}}</div>

  </br>
  <label class="col-sm-2 control-label">goal</label>
  <div class="col-sm-10 form-control"> {{project.goal}} </div>
  </br>
  <label class="col-sm-2 control-label">description</label>
  <div class="col-sm-10 form-control"> {{project.description}} </div>
  </br>
  <label class="col-sm-2 control-label">start date</label>
  <div class="col-sm-10 form-control"> {{project.start}} </div>
  </br>
  <label class="col-sm-2 control-label">end date</label>
  <div class="col-sm-10 form-control">{{project.end}}</div>
  </br>
  <label class="col-sm-2 control-label">Category</label>
  <div class="col-sm-10 form-control">{{project.category}}</div>
  </br>
</div>

  <form action="" method="POST">
    <label class="col-sm-3 control-label">contributors</label>
    <input type="text" class="form-control" name="name" placeholder="Name">
    <input type="text" class="form-control" name="amount" placeholder="Amount">
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:{{project.progressStr}}">
        <span class="sr-only"></span>
      </div>
    </div>
    {{#each project.contributions}}
      <label class="col-sm-3 control-label">contributor</label>
      {{this.name}}</br>
      <label class="col-sm-3 control-label">amount</label>
      {{this.amount}}</br>
    {{/each}}
    <button type="submit"> submit </button>
  </form>


</body>

