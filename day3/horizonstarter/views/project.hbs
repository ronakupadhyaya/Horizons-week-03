
<form method="POST">
  <div class="container">
    <h1>View Project</h1>
  <div class="form-group col-md-8 ">
    <ul>
      <li> title: {{title}}</li>
      <li> goal: {{goal}}</li>
      <li> description: {{description}}</li>
      <li> category: {{category}}</li>
      <li> start: {{start}}</li>
      <li> end: {{end}}</li>
      <li> total amount: {{totalAmount}}</li>
      <li> progress:

      <div class="progress">
        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="{{totalAmount}}"
          aria-valuemin="0" aria-valuemax="{{goal}}" style="width:{{percentage}}%">
          {{percentage}}% Complete (success)
        </div>
      </div>

      </li>
      <li> contributions: {{# each contributions}}
        <ul>
          <li>name: {{this.name}},  amount: {{this.amount}}</li>
        </ul>
        {{/each}}
      </li>
      </ul>
      <div class="">
        <div class="form-group col-xs-7">
          <label for="nameInput">Name</label>
          <input type="text" name="name" value="" class="form-control" placeholder="Name"></input>
        </div>
      </div>
      <div class="">
        <div class="form-group col-xs-7">
          <label for="amoungInput">Amount</label>
          <input type="text" name="amount" value="" class="form-control" placeholder="Amount"></input>
        </div>
        <div class="form-group col-xs-7">
        <input type="submit" name="" value="Submit" class ="btn btn-default">
        <a class ="btn btn-default" href="/project/{{id}}/edit">Edit</a>
        </div>
      </div>
    </div>
  </div>

</form>
