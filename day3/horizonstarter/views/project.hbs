<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<script src="/js/contributions.js"></script>
<h1>View Project</h1>
<div>
  title: {{project.title}}<br><br>
  goal: {{project.goal}}<br><br>
  description: {{project.description}}<br><br>
  start: {{project.start}}<br><br>
  end: {{project.end}}<br><br>
  Total contribution: {{sum}}<b3r><br>
  Category: {{project.category}}<br><br>
</div>


<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="70"
  aria-valuemin="0" aria-valuemax="100" style="width:70%">
    70%
  </div>
</div>


<form method="POST">
  <input id="nameInput" type="text" name="name">name
  <input id="amountInput" type="text" name="amount">amount
<button id="send-contribution">Add Contribution</button>
</form>


<h1>All the lovely contributors</h1>
<div>
  {{#each project.contributions}}
  Name: {{this.name}}; Amount contributed: {{this.amount}}<br>
  {{/each}}
</div>
