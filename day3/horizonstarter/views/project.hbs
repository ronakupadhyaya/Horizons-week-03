<h1>View Project</h1>

<!-- Part 3: View a single project -->
<h2>{{myProject.title}}</h2>
<div>{{myProject.goal}}</div>
<p>{{myProject.description}}</p>
<date>{{myProject.start}}</date>
<date>{{myProject.end}}</date>
<div class="progress">
  <div class="progress-bar" role="progressbar" style="width:{{percent}}%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">{{percent}}%</div>
</div>
<!-- YOUR CODE HERE -->

<!-- Part 4: Contribute to a project -->
<ul>
  {{#each myProject.contributions}}
  <li>
    {{amount}} from {{name}}
  </li>
  {{/each}}
</ul>
<form class = "form-group" method= 'post' action= "/project/{{myProject._id}}">
  <div class= "form-group" >
    <input type='text' class = "form-control" name="name" placeholder="name"/>
  </div>
  <div class= "form-group" >
    <input type='text' class = "form-control" name="amount" placeholder= "amount"/>
  </div>
  <div class= "form-group" >
    <input type="submit" class = "form-control" name="" value="Submit">
  </div>
</form>
