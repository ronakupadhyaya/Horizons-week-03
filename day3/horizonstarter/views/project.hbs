  <input id="send-contribution" name="submit" value="Add Contribution"></input>
</form>



<h1>TOTAL CONTRIBUTIONS: {{this.totalContributions}}</h1>

<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="{{this.goalMet}}"
  aria-valuemin="0" aria-valuemax="100" style="width:{{this.goalMet}}%">
    <span class="sr-only">{{this.goalMet}}% Complete</span>
  </div>
</div>

