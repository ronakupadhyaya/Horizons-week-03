<a class="btn btn-default" href="/">< Go back</a>
<a class="btn btn-default" href="/project/{{project._id}}/edit">Edit this project</a>
<hr>

<!-- Part 3: View a single project -->
  <h1 class="project-name">{{project.title}}</h1>

<section class="project-goal">
  <div class="project-progress">$<span id="total">{{totalContributions}}</span> of ${{project.goal}} reached!</div>
  <div class="progress">
    <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar"
    aria-valuenow="{{totalContributions}}" aria-valuemin="0" aria-valuemax="{{project.goal}}"
    style="width:{{percentReached}}%">
    {{percentReached}}% reached!
    </div>
  </div>
</section>

  <section class="project-category">
    <strong>Category: </strong> {{project.category}}
  </section>
  <section class="project-description">
    <div class="section-heading">
      <strong>Project Description: </strong>
    </div>
    <p>
      {{#if project.description}}
        {{project.description}}
      {{else}}
        No description provided.
      {{/if}}
    </p>
  </section>

  <section class="project-footer">
    <div><strong>Start date:</strong> {{project.start}}</div>
    <div><strong>End date:</strong> {{project.end}}</div>
  </section>

<section class="contributions">
  <h4>Contributors</h4>
  <ul class="list-unstyled">
    {{#each project.contributions}}
      <li class="contributor-listing"><strong>{{name}}</strong> ${{amount}}</li>
    {{/each}}
  </ul>

</section>

<hr>

<form class="" action="/project/{{project._id}}" method="post">
  <h3>Contribute to this project</h3>
  <div class="col-xs-4">
    <input class="form-control" id="contribution-name" type="text" name="name" placeholder="Name"value="{{name}}">
  </div>
  <div class="col-xs-1 text-right">
    <h4>$</h4>
  </div>
  <div class="col-xs-3">
    <input class="form-control" id="contribution-amount" type="Number" name="amount" placeholder="Contribution amount" value="{{amount}}">
  </div>
  <input class="btn btn-default" id="send-contribution" value="Contribute!">
</form>
