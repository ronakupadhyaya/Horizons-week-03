<!-- Exercise 4: Contribute to a project -->
<div class="container">
  <div class="row well">
    <h3>Contribute to this project:</h3>
    <div>{{#each errors}} {{this.msg}} {{/each}}</div>
    <form action="/project/{{_id}}" method="post">
     <div class="form-group">
       <label for="title">Name</label>
       <input type="text" class="form-control" name="name" placeholder="Your name">
     </div>
     <div class="form-group">
       <label for="goal">Amount</label>
       <input type="number" class="form-control" name="amount" placeholder="Enter contribution amount">
     </div>
     <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>
