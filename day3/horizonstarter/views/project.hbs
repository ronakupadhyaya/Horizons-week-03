<h1>View Project</h1>

<!-- Exercise 3: View a single project -->
<h1>{{title}}</h1>
<p>Goal: ${{goal}}</p>
<p>{{description}}</p>
<p>{{start}}</p>
<p>{{end}}</p>
<h4>Total Amount Contributed: {{total}}
  <div class="progress">
   <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40"
   aria-valuemin="0" aria-valuemax="100" style="width:{{percent}}%">
     {{this.percent}}% Complete (success)
   </div>
  </div>
  <form method="GET" action="/project/{{id}}/edit">
  <button type="submit">Edit</button>
</form>
<p style="font-weight:bold;">Contributors</p>
{{#each contributions}}
<p>Name: {{this.name}}</p>
<p>Amount: {{this.amount}}</p>
</br>
{{/each}}


<!-- Exercise 4: Contribute to a project -->

<form method="POST" action="/project/{{id}}" name="contribution">
  <input type="text" placeholder="Name" name="name">
  <input type="number" placeholder="Amount" name="amount">
  <input type="submit">
</form>
