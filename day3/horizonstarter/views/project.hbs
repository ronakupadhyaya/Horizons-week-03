

<!-- Part 3: View a single project -->
<!-- YOUR CODE HERE -->
<div class="container-fluid mt-4 mb-5" style="width:50%">
  <h1 class="mb-3">View Project</h1>
<div class="card">
<div class="card-header">
  Title: {{title}}
</div>
<div class="card-block">
  <p class="card-text"> Description: {{description}}</p>
  <p class="card-text"> <em> Goal: {{goal}} </em> </p>
  <p class="card-text"> <em> Total: {{total}} </em> </p>
  <p class="card-text"> <em> Category: {{category}} </em> </p>
</div>
<div class="card-block">
  <div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="70"
  aria-valuemin="0" aria-valuemax="100" style="width:{{progress}}%">
    {{progress}}%
  </div>
</div>
</div>
<div class="card-block">
  <legend> Contributors: </legend>
  <div class="list-group">
    {{#each conArr}}
      <li class="list-group-item list-group-item-info">
        <strong> {{this.name}} &nbspgave&nbsp ${{this.amount}}!</strong>
      </li>
      {{/each}}
  </div>
</div>
<div class="card-footer">
  <p> Start date: {{start}} </p>
  <p> End date: {{end}} </p>
</div>
</div>
</div>

<!-- Part 4: Contribute to a project -->
<!-- YOUR CODE HERE -->
<div class="container-fluid" style="width:50%">
<h2> Contribute to this project here! </h2>
<form method="post" action="/project/{{project_id}}">
  <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" name="name" value="{{name}}">
  </div>
  <div class="form-group">
    <label>Amount</label>
    <input type="text" class="form-control" name="amount" value="{{amount}}">
  </div>
  <button type="submit" class="btn btn-primary">Contribute</button>
</form>
</div>
