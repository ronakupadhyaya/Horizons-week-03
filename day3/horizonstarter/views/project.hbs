<h1>View Project</h1>

<!-- Exercise 3: View a single project -->
<h1>{{title}}</h1>
<p>Goal: {{goal}}</p>
<p>{{description}}</p>
<p>{{start}}</p>
<p>{{end}}</p>
<h4>Total Amount Contributed: {{total}}
  <div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="70"
  aria-valuemin="0" aria-valuemax="100" style="width:{{percent}}%">
    <span class="sr-only">70% Complete</span>
  </div>
</div>
<p style="font-weight:bold;">Contributors</p>
{{#each contributions}}
<p>Name: {{this.name}}</p>
<p>Amount: {{this.amount}}</p>
</br>
{{/each}}


<!-- Exercise 4: Contribute to a project -->

<form method="POST" action="/project/{{id}}" name="contribution">
  <input type="text" placeholder="Name" name="name">
  <input type="number" placeholder="Amount" name="amount">
  <input type="submit">
</form>
