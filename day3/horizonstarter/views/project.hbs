<h1>~View Project~</h1>

<!-- Part 3: View a single project -->

<div class="project">
  <h3>{{project.title}}</h3> from {{project.start}} to {{project.end}} <br>
  <strong>Goal: ${{project.goal}}</strong><br>
  <p>{{project.description}}</p><br><br>
</div>

<h3>Contributions</h3>
<div class="progress">
  <div class="progress-bar" role="progressbar"
  aria-valuemin="0" aria-valuemax="100" style="width: {{project.totalContributions}}%">
    <span class="sr-only">Complete</span>
  </div>
</div>
<!-- Part 4: Contribute to a project -->

<!-- YOUR CODE HERE -->
<div>
  <form method="POST" action="/project/{{project._id}}">
    <h4>Make a contribution to this project:</h3>
    Name: <input type=text name="nameTB" value=""><br><br>
    Amount: <input type="Number" name="amtTB" value=""><br><br>
    <input type="submit" value="Submit"><br><br><br>
  </form>
</div>

<div class="total-amt">
  <h4>Total amount of contributions: ${{project.totalContributions}}</h3>
</div>

<span>
  <h4>Previous contributions:</h3>
  {{#each project.contributions}}
  <div class="contribution">
    Name: {{this.name}}<br>
    Amount: ${{this.amount}}<br>
  </div>
  {{/each}}
</span><br><br><br>


<a href="/">View more projects<a>
