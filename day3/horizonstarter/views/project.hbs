<!-- Part 4: Contribute to a project -->
{{#if errors}}
  <ul>
    {{#each errors}}
      <li>{{this.msg}}</li>

    {{/each}}

  </ul>

{{/if}}

<h1>Contribute: </h1>
<form action="/project/{{projectID}}" method="POST">
  <input type="text" name="name" value="" placeholder="Enter name here"><br><br>
  <input type="text" name="amount" value="" placeholder="Enter amount here"><br><br>
  <input type="submit" value="Submit" /><br><br>
</form>

