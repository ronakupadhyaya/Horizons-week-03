

<!-- Part 2: Create project -->

<div class="container mt-4 " style="width: 30%">
  <h2>Edit project</h2>
  <div class="card p-3 mt-4">
<form method="post" action="/project/{{project_id}}/edit" class="border-3">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" name="title" value="{{title}}" placeholder="{{title}}">
  </div>
  <div class="form-group">
    <label>Goal</label>
    <input type="text" class="form-control" name="goal" value="{{goal}}" placeholder="{{goal}}">
  </div>
  <div class="form-group">
    <label>Description</label>
    <div class="container-fluid">
    <textarea class="row" style="width:100%" name="description" value="{{description}}">{{description}}</textarea>
  </div>
  </div>
  <div class="form-group">
    <label>Category</label>
    <select class="form-control" name="category">
      <option value="{{category}}" selected>{{category}}</option>
      <option value="Famous Muppet Frogs">Famous Muppet Frogs</option>
      <option value="Current Black Presidents">Current Black Presidents</option>
      <option value="The Pen Is Mightier">The Pen Is Mightier</option>
      <option value="Famous Mothers">Famous Mothers</option>
      <option value="Drummers Named Ringo">Drummers Named Ringo</option>
      <option value="1-Letter Words">1-Letter Words</option>
      <option value='Months That Start With "Feb"'>Months That Start With "Feb"</option>
      <option value="How Many Fingers Am I Holding Up">How Many Fingers Am I Holding Up</option>
      <option value="Potent Potables">Potent Potables</option>
    </select>
  </div>
  <div class="form-group">
    <label>Start Date</label>
    <input class="form-control" type="date" name="start" value="{{start}}" placeholder="{{start}}">
  </div>
  <div class="form-group">
    <label>End Date</label>
    <input class="form-control" type="date" name="end" value="{{end}}" placeholder="{{end}}">
  </div>
  <button type="submit" class="btn btn-primary">Edit Project</button>
</form>
</div>

{{#each errors}}
<div class="alert alert-danger">
  <strong> "{{msg}}" </strong>
</div>
{{/each}}
</div>



