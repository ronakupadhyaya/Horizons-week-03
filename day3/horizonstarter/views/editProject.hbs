{{#if error}}
<p>There was an error!</p>
{{/if}}

<form class="edit-project" action="#" method="post">

  <input type="text" name="title" value="{{title}}" class="form-control" placeholder="Title">
  <input type="text" name="goal" value="{{goal}}" class="form-control" placeholder="Goal">
  <input type="text" name="description" value="{{description}}" class="form-control" placeholder="Description">
  <input type="text" name="start" value="{{start}}" class="form-control" placeholder="Start Date">
  <input type="text" name="end" value="{{end}}" class="form-control" placeholder="End Date">

  <p>Category:</p>
  <select name="category">
    {{#each categories}}
    <option value="{{this}}">{{this}}</option>
    {{/each}}
  </select>

  <input type="submit" class="btn btn-default" value="Submit">

</form>
