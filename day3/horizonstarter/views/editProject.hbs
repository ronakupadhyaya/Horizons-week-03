<h2>Edit project</h2>

<!-- Part 2: edit project -->
<form method="POST" action=" /project/{{project._id}}/edit">
  <div><input type="text" name="title" value="{{project.title}}" placeholder="title"></div>
  <div><input type="text" name="goal" value="{{project.goal}}" placeholder="goal"></div>
  <div><input type="textarea" name="description" value="{{project.description}}" placeholder="description"></div>
  <div><input type="date" name="start" value="{{start}}"></div>
  <div><input type="date" name="end" value="{{end}}"></div>

  <select name='category' class="custom-select">
    <option selected>Category</option>
    {{#each category}}
    <option value="{{this.name}}" {{#if this.selected}} selected {{/if}}>{{this.name}}</option>
    {{/each}}
  </select>
<div><input type="submit" value="submit"></div>

    {{err}}
</form>
