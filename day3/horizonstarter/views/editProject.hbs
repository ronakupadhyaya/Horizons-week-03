<h2>Edit project</h2>

<form class="" action="/project/{{project._id}}/edit" method="post">
  <div class="">
    Title: <input type="text" name="title" value="{{project.title}}" placeholder="title" required>
  </div>
  <div class="categories">
    Project Category:
     <select name="category">
       {{#each selection}}
          {{#if this.selected}}
            <option  value="{{this.name}}" selected>{{this.name}}</option>
          {{else}}
            <option  value="{{this.name}}">{{this.name}}</option>
          {{/if}}
       {{/each}}
      <!-- <option  value="Current Black Presidents">Current Black Presidents</option>
      <option  value="The Pen Is Mightier">The Pen Is Mightier</option>
      <option  value="Famous Mothers">Famous Mothers</option>
      <option  value="Drummers Named Ringo">Drummers Named Ringo</option>
      <option  value="1-Letter Words">1-Letter Words</option>
      <option  value="Months That Start With "Feb"">Months That Start With "Feb"</option>
      <option  value="How Many Fingers Am I Holding Up">How Many Fingers Am I Holding Up</option>
      <option  value="Potent Potables">Potent Potables</option> -->
     </select>
    <!-- </datalist> -->
  <!-- </div> -->
  <div class="">
    Goal: <input type="number" name="goal" value="{{project.goal}}" placeholder="goal" required>
  </div>
  <div class="">
    <div>
      Description:
    </div>
    <textarea name="description" rows="8" cols="80"
    value="{{project.description}}" placeholder="description">{{project.description}}</textarea>
  </div>
  <div class="">
    <div class="">
      Start Date:
    </div>
    <input type="Date" name="start" value="{{start}}" required>
  </div>
  <div class="">
    <div class="">
      End Date:
    </div>
    <input type="Date" name="end" value="{{end}}" required>
  </div>
  <div class="">
    <input type="submit" name="submit" value="submit">
  </div>

  <ul>
    {{#each error}}
    <li> {{this.msg}}</li>
    {{/each}}
  </ul>
</form>
