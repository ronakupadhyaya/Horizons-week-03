<h2>Edit project</h2>

{{#each errors}}
  <h3>{{msg}}</h3>
{{/each}}
<form method="post" action="/project/{{project._id}}/edit">
  <input class="form-control" type="text" name="title" value="{{project.title}}" placeholder="title">
  <input class=" form-control" type="text" name="goal" value="{{project.goal}}" placeholder="goal">
  <textarea class="form-control" name="description" rows="4" value="{{project.description}}" placeholder="description"></textarea>
  <input class="form-control" type="date" name="start" value="{{startDate}}">
  <input class="form-control" type="date" name="end" value="{{endDate}}">
  <div class="form-group">
    <select class="form-control" name="category">
      <option value="Famous Muppet Frogs">Famous Muppet Frogs</option>
      <option value="Current Black Presidents">Current Black Presidents</option>
      <option value="The Pen Is Mightier">The Pen Is Mightier</option>
      <option value="Famous Mothers">Famous Mothers</option>
      <option value="Drummers Named Ringo">Drummers Named Ringo</option>
      <option value="1-Letter Words">1-Letter Words</option>
      <option value="Months That Start With Feb">Months That Start With Feb</option>
      <option value="How Many Fingers Am I Holding Up">How Many Fingers Am I Holding Up</option>
      <option value="Potent Potables">Potent Potables</option>
    </select>
  </div>
  <input class="form-control" type="submit" value="Edit Project">
</form>
