<h2>Edited project</h2>

<form method="post">
    <div class="form-group">
        <label for="title">Project Title</label>
        <input type="text" name="title" class="form-control" id="title" placeholder="Project title" value="{{data.title}}">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" class="form-control" rows="5">{{data.description}}</textarea>
    </div>
    <div class="form-group">
        <label for="categorries">Category</label>
        <select name="categories">
		  <option value="Famous Muppet Frogs">Famous Muppet Frogs</option>
		  <option value="Current Black Presidents">Current Black Presidents</option>
		  <option value="The Pen Is Mightier">The Pen Is Mightier</option>
		  <option value="Famous Mothers">Famous Mothers</option>
		  <option value="Drummers Named Ringo">Drummers Named Ringo</option>
		  <option value="1-Letter Words">1-Letter Words</option>
		  <option value='Months That Start With "Feb"'>Months That Start With "Feb"</option>
		  <option value="How Many Fingers Am I Holding Up">How Many Fingers Am I Holding Up</option>
		  <option value="Potent Potables">Potent Potables</option>
		</select>
    </div>
    <div class="form-group">
        <label for="amount">Fundraising goal</label>
        <div class="input-group">
            <div class="input-group-addon">$</div>
            <input type="text" class="form-control" id="amount" name="amount" placeholder="Amount" value="{{data.amount}}">
            <div class="input-group-addon">.00</div>
        </div>
    </div>
    <div class="form-group">
        <label for="start">Start date</label>
        <input type="date" class="form-control" id="start" name="start" value="{{data.start}}">
    </div>
    <div class="form-group">
        <label for="end">End date</label>
        <input type="date" class="form-control" id="end" name="end" value="{{data.end}}">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
