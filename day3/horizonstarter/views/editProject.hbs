<body>
<h2>Create project</h2>

<!-- Part 2: Create project -->

<form method="POST">
           <p><input type="text" name="title" placeholder="Title" value= "{{title}}" /></p>
           <p><input type="text" name="goal" placeholder="Goal #" value="{{goal}}"/></p>
           <p><textarea id="description" class="text" cols="22" rows ="6" name="description" value="{{description}}"></textarea></p>
           <input type="date" name="start" placeholder="Start Date" value="{{start}}"/>
           <input type="date" name="end" placeholder="End Date" value="{{end}}" />
