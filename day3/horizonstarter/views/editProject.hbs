

<!-- Part 2: Create project -->
<div class="container">

<h2>Edit project</h2>

<form method="POST" action="/project/{{id}}/edit">
  <div class="form-group row">
      <label for="example-text-input" class="col-2 col-form-label" >Title:</label>
      <div class="col-8">
        <input class="form-control" type="text" name="title" value="{{title}}">
      </div>

    </div>
    <div class="form-group row">
      <label for="example-text-input" class="col-2 col-form-label" >Goal:</label>
      <div class="col-6">
      <input class="form-control" type="text" name="goal" value="{{goal}}">
    </div>
    </div>
    <div class="form-group row">
      <label for="example-text-input" class="col-2 col-form-label" >Description:</label>
      <div class="col-6">
      <textarea class="form-control" type="textarea" name="description" value="{{description}}"></textarea>
    </div>
    </div>
    <div class="form-group row">
        <label for="exampleSelect1" >Category</label>
        <select class="form-control" name="category" id="exampleSelect1">
          <!-- <option> Famous Muppet Frogs</option>
          <option> Current Black Presidents</option>
          <option> The Pen Is Mightier</option>
          <option> Famous Mothers</option>
          <option> Drummers Named Ringo</option>
          <option selected> 1-Letter Words</option>
          <option> Months That Start With "Feb"</option>
          <option> How Many Fingers Am I Holding Up</option>
          <option> Potent Potables</option> -->
          {{#each categories}}
            <option value="{{this.name}}" {{#if this.selected}} selected{{/if}}>{{name}}</option>
          {{/each}}
        </select>
      </div>

    <div class="form-group row">
      <label for="example-text-input" class="col-2 col-form-label" >Start:</label>
      <div class="col-6">
      <input class="form-control" type="Date" name="start" value="{{start}}" >
    </div>
    </div>
    <div class="form-group row">
      <label for="example-text-input" class="col-2 col-form-label" >End:</label>
      <div class="col-6">
      <input class="form-control" type="Date" name="end" value="{{end}}" >
    </div>
    </div>
    <div class="form-group row">
    <input type="submit" name="" value="confirm editing" class ="btn btn-default">
  </div>
</form>
</div>
