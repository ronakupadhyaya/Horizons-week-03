<h2>Create project</h2>

<!-- Part 2: Create project -->
<h1>/projects/{{project.id}}/edit</h1>
<form class="" action="/project/{{project.id}}/edit" method="post">
  <span>
    <h3>Title:</h3><input type="text" name="title" value="{{project.title}}" placeholder="Title">
    <h3>Goal:</h3><input type="text" name="goal" value="{{project.goal}}" placeholder="Goal">
    <h3>Description:</h3><input type="textarea" name="description" value="{{project.description}}" placeholder="Description">
    <h3>Start Date:</h3><input type="date" name="start" value="{{project.start}}" placeholder="Start Date">
    <h3>End Date:</h3><input type="date" name="end" value="{{project.end}}" placeholder="end Date"><br>
    <h3>Category:</h3>
      <div class="form-group">
        <select name="category" id = "categories" class="form-control">
          <option value="Famous Muppet Frogs">Famous Muppet Frogs</option>
          <option value="Current Black Presidents">Current Black Presidents</option>
          <option value="The Pen Is Mightier">The Pen Is Mightier</option>
          <option value="Famous Mothers">Famous Mothers</option>
          <option value="Drummers Named Ringo">Drummers Named Ringo</option>
          <option value="1-Letter Words">1-Letter Words</option>
          <option value='Months That Start With "Feb"'>Months That Start With "Feb"</option>
          <option value="How Many Fingers Am I Holding Up">How Many Fingers Am I Holding Up</option>
          <option value="Potent Potables">Potent Potables</option>
        </select>
      </div>
    <input type="submit" value="Submit">
  </span>
</form>
<input id="category" type="hidden" value="{{project.category}}"></input>

{{#each errors}}
  <h5>{{msg}}</h5>
{{/each}}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<script>
  var category = $('#category').val();
  $('option').filter(function(){
    return category === $(this).val()}
  ).attr('selected', true)
</script>
