{{#each errors}}
	<h3>{{msg}}</h3>
{{/each}}	


<form method="POST"> 
	<input type="text" name="title" value="{{project.title}}" placeholder="Project name">
	<select name="category" id="category" placeholder="Category">
		<option value="Famous Muppet Frogs">Famous Muppet Frogs</option>
		<option value="Current Black Presidents">Current Black Presidents</option>
		<option value="The Pen Is Mightier">The Pen Is Mightier</option>
		<option value="Famous Mothers">Famous Mothers</option>
		<option value="Drummers Named Ringo">Drummers Named Ringo</option>
		<option value="1-Letter Words">1-Letter Words</option>
		<option value="Months That Start With 'Feb'">Months That Start With "Feb"</option>
		<option value="How Many Fingers Am I Holding Up">How Many Fingers Am I Holding Up</option>
		<option value="Potent Potables">Potent Potables</option>
	</select>
	<input type="text" name="goal" value="{{project.goal}}" placeholder="Goal">
	<input type="textarea" name="description" value="{{project.description}}" placeholder="Description">
	<input type="date" name="start" value="{{start}}" placeholder="Start date">
	<input type="date" name="end" value="{{end}}" placeholder="End goal">
	<input type="submit">
	<input type="hidden" value="{{project.category}}"" id="holder">
</form>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript">
	var value = $('#holder').val()
	$('#category').val(value)
</script>