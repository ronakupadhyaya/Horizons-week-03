<h2>Edit project</h2>
<script src="/js/jquery.min.js"></script>
{{#if error}}
<div class="error">{{error}}</div>
{{/if}}

<form action="/project/{{project._id}}/edit" method="post">
    <input class="input" type="text" name="title" placeholder="Title" value="{{project.title}}">
    <input class="input" type="text" name="goal" placeholder="Goal" value="{{project.goal}}">
    <textarea class="input" name="description" cols="30" rows="10" placeholder="Description" style="resize:none">{{project.description}}</textarea>
    <select name="category">
        <option disabled selected> -- Select an option --</option>
        <option value="Famous Muppet Frogs">Famous Muppet Frogs</option>
        <option value="Current Black Presidents">Current Black Presidents</option>
        <option value="The Pen Is Mightier">The Pen Is Mightier</option>
        <option value="Famous Mothers">Famous Mothers</option>
        <option value="Drummers Named Ringo">Drummers Named Ringo</option>
        <option value="1-Letter Words">1-Letter Words</option>
        <option value="Months That Start With \"Feb\"">Months That Start With "Feb"</option>
        <option value="How Many Fingers Am I Holding Up">How Many Fingers Am I Holding Up</option>
        <option value="Potent Potables">Potent Potables</option>
    </select>
    <br> Start:<input type="date" name="start" value="{{start}}">
    <br> End:<input type="date" name="end" value="{{end}}">
    <input type="submit" value="Save Changes">
</form>
<a href="/">> View all projects</a>

<script>
    $(document).ready(function () {
        $('select').val('{{project.category }}')
    })

</script>

