<h1  class="page-title text-center">Editing project</h1>

<a class="btn btn-default" href="/">< Go back</a>
<hr>
<form class="" action="/project/{{project._id}}/edit" method="post">
  <input class="form-control" type="text" name="title" placeholder="Project Title" value="{{project.title}}">
  <input class="form-control" type="number" name="goal" placeholder="Project Goal" value="{{project.goal}}">
  <textarea class="form-control" name="description" rows="8" cols="80" placeholder="Project Description">{{project.description}}</textarea>
  <label class="control-label" for="start">Start date: </label>
  <input class="form-control" type="Date" name="start" value="{{project.start}}">
  <label class="control-label" for="start">End date: </label>
  <input class="form-control" type="Date" name="end" value="{{project.end}}">
  <label for="category">Select category</label>
  <select class="form-control" name="category" selected="{{project.category}}">
    <option value="Famous Muppet Frogs">Famous Muppet Frogs</option>
    <option value="Current Black Presidents">Current Black Presidents</option>
    <option value="The Pen is Mightier">The Pen is Mightier</option>
    <option value="Famous Mothers">Famous Mothers</option>
    <option value="Drummers Named Ringo">Drummers Named Ringo</option>
    <option value="1-Letter Words">1-Letter Words</option>
    <option value='Months That Start With "Feb"'>Months That Start With "Feb"</option>
    <option value="How Many Fingers Am I Holding Up">How Many Fingers Am I Holding Up</option>
    <option value="Potent Potables">Potent Potables</option>
  </select>
  <input class="btn btn-primary" type="submit" value="Submit">
</form>
