<form method = "post" action = "/project/{{project._id}}/edit" id="projectFORM">
    <div class="form-group">
         <label class = "control-label" for="title">Title: </label>
        <input type="text" name="title" value="{{project.title}}">
    </div>
    <div class ="form-group">
        <label class = "control-label" for="title">Goal amount to be raised: </label>
        <input type="number" name="goal" value="{{project.goal}}">
    </div>
    <div class="form-group">
        <label class = "control-label" for="title">Start: </label>
        <input type="Date" name="start" value="{{start}}">
    </div>
    <div class="form-group">
        <label class = "control-label" for="title">End: </label>
        <input type="Date" name="end" value="{{end}}">
    </div>
    <div class="form-group">
    Category: <select id="category" name="category">
