<h1>Edit project</h1>

<form action="" method="POST" role="form" class="form-horizontal">
	<legend></legend>

	{{#if error_msg}}
	<div class="alert alert-warning">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<strong>Error!</strong> {{error_msg}}
	</div>
	{{/if}}
		
	</div>
	<div class="form-group">
		 <label for="" class="control-label col-xs-2 col-sm-2 col-md-2 col-lg-2">Title</label>
		<div class="col-xs-10 col-sm-8 col-md-6 col-lg-4">
			<input type="text" class="form-control" id="" placeholder="Input title here" name="title" value="{{project.title}}">
		</div>
	</div>

	</div>
	<div class="form-group">
		 <label for="" class="control-label col-xs-2 col-sm-2 col-md-2 col-lg-2">Goal</label>
		<div class="col-xs-10 col-sm-8 col-md-6 col-lg-4">
			<input type="text" class="form-control" id="" placeholder="Input goal here in dollars" name="goal" value={{project.goal}}>
		</div>
	</div>

	</div>
	<div class="form-group">
		 <label for="" class="control-label col-xs-2 col-sm-2 col-md-2 col-lg-2">Description</label>
		<div class="col-xs-10 col-sm-8 col-md-6 col-lg-4">
			<textarea type="text" class="form-control" id="" placeholder="Describe your project" name="description">{{project.description}}</textarea>
		</div>
	</div>

	</div>
	<div class="form-group">
		 <label for="" class="control-label col-xs-2 col-sm-2 col-md-2 col-lg-2">Start</label>
		<div class="col-xs-10 col-sm-8 col-md-6 col-lg-4">
			<input type="date" class="form-control" id="" name="start" value={{start_date}}>
		</div>
	</div>

	</div>
	<div class="form-group">
		 <label for="" class="control-label col-xs-2 col-sm-2 col-md-2 col-lg-2">End</label>
		<div class="col-xs-10 col-sm-8 col-md-6 col-lg-4">
			<input type="date" class="form-control" id="" name="end" value={{end_date}}>
		</div>
	</div>

	<div class="form-group">
	  <label class="control-label col-xs-2 col-sm-2 col-md-2 col-lg-2">Category</label>
	  <div class="col-xs-10 col-sm-8 col-md-6 col-lg-4">
		  <select class="form-control" name="category">
		  	<option></option>

				{{#each categories}}
				<option{{#if this.selected}} selected{{/if}}>{{this.name}}</option>
				{{/each}}

		  </select>
	  </div>
	</div>

	<div class="form-group">
		<button type="submit" class="btn btn-primary col-xs-offset-2 col-sm-offset-2 col-md-offset-2 col-lg-offset-2">Submit</button>
		<button type="button" class="btn btn-primary">Cancel</button>
	</div>

</form>

<script type="text/javascript" value={{project}}>
	console.log(this);
</script>