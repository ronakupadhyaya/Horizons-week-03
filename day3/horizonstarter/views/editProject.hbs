<h2>Edit project</h2>

{{#each error}}
  <h4 id='error'>{{msg}}</h4>
{{/each}}

<!-- Part 2: Create project -->
<form action="" method="post">
  <input type="text" name="title" placeholder="Title" value="{{title}}"><br>
  <select name="category">
    <option value="Famous Muppet Frogs" {{shouldSelect "Famous Muppet Frogs"}}>Famous Muppet Frogs</option>
    <option value="Current Black Presidents" {{shouldSelect "Current Black Presidents"}}>Current Black Presidents</option>
    <option value="The Pen Is Mighier" {{shouldSelect "The Pen Is Mighier"}}>The Pen Is Mighier</option>
    <option value="Famous Mothers" {{shouldSelect "Famous Mothers"}}>Famous Mothers</option>
    <option value="Drummers Named Ringo" {{shouldSelect "Drummers Named Ringo"}}>Drummers Named Ringo</option>
    <option value="Letter Words" {{shouldSelect "Letter Words"}}>1-Letter Words</option>
    <option value='Months That Start With "Feb"' {{shouldSelect 'Months That Start With "Feb"'}}>Months That Start With "Feb"</option>
    <option value="Many Fingers Am I Holding Up" {{shouldSelect "Many Fingers Am I Holding Up"}}>How Many Fingers Am I Holding Up</option>
    <option value="Potent Potables" {{shouldSelect "Potent Potables"}}>Potent Potables</option>
  </select><br>
  <input type="number" name="goal" placeholder="Goal" value="{{goal}}"><br>
  <textarea name="description" rows="8" cols="80" placeholder="Description">{{description}}</textarea><br>
  <input type="date" name="start" value="{{start}}"><br>
  <input type="date" name="end" value="{{end}}"><br>
  <button type="submit">Submit</button>
</form>