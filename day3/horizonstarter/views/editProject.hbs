<form method="post" action="/project/{{project._id}}/edit" >
  Title <input type="text" name="title" value="{{project.title}}">
  Goal <input type="text" name="goal" value="{{project.goal}}">
  Description <input type="Textarea" name="description" value="{{project.description}}">
  Start <input type="Date" name="start" value={{project.start}}>
  End <input type="Date" name="end" value="{{project.end}}">
  <div class="form-group">
    <select name="category" class="form-control" id="sel1">
      <option value="{{project.category}}" selected>{{project.category}}</option>
      {{#each categories}}
        <option value="{{this}}" name="category">{{this}}</option>
      {{/each}}
    </select>
  </div>
  <input type="submit" value="Submit"/>

</form>

{{#if errors}}
<ul>
  {{#each errors}}
    <li style="color: red">{{this.msg}} </li>
  {{/each}}
</ul>
{{/if}}
