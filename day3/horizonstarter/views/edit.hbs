<h2>Edit project</h2>

<!-- Part 2: Create project -->

<form  method="POST" role="form">
  <legend>Edit {{project.title}}</legend>

  <div class="form-group">
    <label for="title">Title:</label>
    <input type="text" class="form-control" name="title" value="{{project.title}}">
  </div>

  <div class="form-group">
    <label for="goal">Goal:</label>
    <input type="text" class="form-control" name="goal" value="{{project.goal}}">
  </div>

  <div class="form-group">
    <label for="description">Description:</label>
    <textarea name="description"  class="form-control" rows="3" required="required" >
      {{project.description}}
    </textarea>
  </div>

  <div class="form-group">
    <label for="category">Category:</label>
    <select id="categorySelect" name="category"  class="form-control" required="required">
      <option value="Famous Muppet Frogs">Famous Muppet Frogs</option>
      <option value="Current Black Presidents">Current Black Presidents</option>
      <option value="The Pen Is Mightier">The Pen Is Mightier</option>
    </select>
  </div>

  

  <div class="form-group">
    <label for="start">Start:</label>
    <input type="date" class="form-control" name="start" value="{{setDate project.start}}">
  </div>

  <div class="form-group">
    <label for="end">End:</label>
    <input type="date" class="form-control" name="end" value="{{setDate project.end}}">
  </div>

  
  

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
