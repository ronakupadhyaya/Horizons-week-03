<h1>View projects</h1>

<div class="dropdown" style="margin-bottom: 40px;">
  <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Choose Sorting
  <span class="caret"></span></button>
  <ul class="dropdown-menu">
    <li><a href="/?sort=start">Start</a></li>
    <li><a href="/?sort=end">End</a></li>
    <li><a href="/?sort=goal">Goal</a></li>
    <li><a href="/?sort=start&sortDirection=descending">Start(descending)</a></li>
    <li><a href="/?sort=end&sortDirection=descending">End(descending)</a></li>
    <li><a href="/?sort=goal&sortDirection=descending">Goal(descending)</a></li>
    <li><a href="/?sort=totalContributions"> Total Contributions </a> </li>
  </ul>
</div>

{{#each projects}}

  <h3> <a href="/project/{{this._id}}">{{this.title}} </a></h3>
  <img width=300 src="{{this.img_url}}"></img>
{{/each}}
<div class="container" style="margin-top: 40px;">
  <a class="btn btn-warning style="cursor: pointer;" href="/new"> Create new project</a>
</div>
