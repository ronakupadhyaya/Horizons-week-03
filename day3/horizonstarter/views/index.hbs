<h1>View projects</h1>
<hr>
<!-- Part 1: View all projects -->
<div class="projects">
  {{#each projects}}
    <div class="project" id="{{this.id}}">
      <h2>{{this.title}}</h2>
      <h6>{{this.start}}</h6>
      <p>{{this.description}}</p>
    </div>
  {{/each}}
</div>


