<div class="container-fluid card p-4 mt-4" style="width:50%">
<h1>View projects</h1>
<div class="my-3 pull-right">
<a class='text-muted card m-1 p-1' style="width:35%" method='post' href='/?total=1'> <small> Sort by total contributions </small></a>
<a class='text-muted card m-1 p-1' style="width:35%" method='post' href='/?full=a'> <small> Filter: Fully funded projects</small></a>
<a class='text-muted card m-1 p-1' style="width:35%" method='post' href='/?full=b'> <small> Filter: Partially funded projects </small></a>
</div>

<!-- Part 1: View all projects -->
<!-- YOUR CODE HERE -->

{{#each items}}
  <div class="card my-3 card-outline-warning">
  <a class="card-header card-warning text-white" href="/project/{{this._id}}">
    <strong>Project {{title}}</strong>
  </a>
  <div class="card-block">
    <p class="card-text"> <strong>Description:</strong> {{description}}</p>
    <p class="card-text">  <strong>Goal:</strong> <em>{{goal}} </em> </p>
  </div>
  <div class="card-footer p-0 px-3 pt-2">
    <small class="text-muted">
    <p> Start date: {{start}} </p>
    <p> End date: {{end}} </p>
  </small>
  </div>
  </div>
{{/each}}

<a style="width:40% ml-3" class="btn btn-success rounded" href="/new">
  <strong>Create a new project
  </strong>
  </a>
</div>
