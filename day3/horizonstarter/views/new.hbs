
<style>
    form {
        text-align: center;
        display: flex;
        flex-direction: column;
    }
</style>

<a class='btn btn-info' href="/" style="margin-left:auto; margin-right:auto; width:25%;">Home</a>

<h2>Create project</h2>

<form method="post" action="/new">
    Title <input type="text" name="title" value="{{title}}" placeholder="Title"> Category
    <select name="category" id="category">
        <option value="Famous Muppet Frogs">Famous Muppet Frogs</option>
        <option value="Current Black Presidents">Current Black Presidents</option>
        <option value="The Pen Is Mightier">The Pen Is Mightier</option>
        <option value="Famous Mothers">Famous Mothers</option>
        <option value="Drummers Named Ringo">Drummers Named Ringo</option>
        <option value="1-Letter Words">1-Letter Words</option>
        <option value='Months That Start With "Feb"'>Months That Start With "Feb"</option>
        <option value="How Many Fingers Am I Holding Up">How Many Fingers Am I Holding Up</option>
        <option value="Potent Potables">Potent Potables</option>
    </select> Description <textarea placeholder="Description" name="description" rows="1" cols="40">{{description}}</textarea>    Goal <input type="number" name="goal" value="{{goal}}" placeholder="Goal"> Start Date <input type="Date" name="start"
        value="{{start}}" placeholder="Start date"> End Date <input type="Date" name="end" value="{{end}}" placeholder="End date">
    <br>
    <input class="btn btn-basic" type="submit" name="" value="Submit">
</form>
{{#each error}}
<p>{{msg}}</p>
{{/each}}

<script>
    var elem = document.getElementById('category');
    elem.value = "{{category}}";

</script>