<h2>Create project</h2>

<!-- Part 2: Create project -->
<form class="newProjectForm" action="/new" method="post">
  <div>
    Title <input type="text" name="title" value="{{project.title}}">
  </div>

  <div>
    Goal <input type="text" name="goal" value="{{project.goal}}">
  </div>

  <div>
    Description <textarea name="description" rows="5" cols="12"> {{project.description}} </textarea>
  </div>

  <div>
    Start <input type="date" name="start" value="{{project.start}}">
  </div>

  <div>
    End <input type="date" name="end" value="{{project.end}}">
  </div>

  <select name="category">
    <option value="Famous Muppet Frogs"> Famous Muppet Frogs </option>
    <option value="Current Black Presidents"> Current Black Presidents </option>
    <option value="The Pen Is Mightier"> The Pen Is Mightier </option>
    <option value="Famous Mothers"> Famous Mothers </option>
    <option value="Drummers Named Ringo"> Drummers Named Ringo </option>
    <option value="1-Letter Words"> 1-Letter Words </option>
    <option value='Months That Start With "Feb"'> Months That Start With "Feb" </option>
    <option value="How Many Fingers Am I Holding Up"> How Many Fingers Am I Holding Up </option>
    <option value="Potent Potables"> Potent Potables </option>
  </select>

  <div>
    <input type="submit" name="" value="Create Project">
  </div>

  {{#if error}}
    <span style="color: red"> Missing certain required fields, resubmit! </span>
  {{/if}}

  {{#if saveError}}
    <span style="color: red"> Could not save for this reason {{err}}, try again! </span>
  {{/if}}
</form>

