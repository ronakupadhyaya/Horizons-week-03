<h2>Create project</h2>

{{#each error}}
  <h4 id='error'>{{msg}}</h4>
{{/each}}

<!-- Part 2: Create project -->
<form action="/new" method="post">
  <input type="text" name="title" placeholder="Title" value="{{title}}"><br>
  <input type="number" name="goal" placeholder="Goal" value="{{goal}}"><br>
  <textarea name="description" rows="8" cols="80" placeholder="Description">{{description}}</textarea><br>
  <input type="date" name="start" value="{{start}}"><br>
  <input type="date" name="end" value="{{end}}"><br>
  <button type="submit">Submit</button>
</form>

