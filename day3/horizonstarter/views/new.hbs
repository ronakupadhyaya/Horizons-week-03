<h2>Create project</h2>

<!-- Part 2: Create project -->
<div class="panel panel-info" style="width:60%">
  <div class="panel-heading">New Project</div>
  <div class="panel-body">
    <form method="post" action="/new">
      <div class="form-group {{#if titleHasError}}has-error{{/if}}">
        <label>Title</label>
        <input type="text" name="title" class="form-control" placeholder="{{#if titleHasError}}{{titlePlaceholder}}{{/if}}" value="{{title}}">
      </div>
      <div class="form-group {{#if goalHasError}}has-error{{/if}}">
        <label>Goal</label>
        <input type="text" name="goal" class="form-control" placeholder="{{#if goalHasError}}{{goalPlaceholder}}{{/if}}" value="{{goal}}">
      </div>
      <div style="display:flex">
        <div class="form-group" style="flex:1">
          <label>Start</label>
          <input type="date" name="start" class="form-control" style="width:60%" value={{start}}>
        </div>
        <div class="form-group" style="flex:1">
          <label>End</label>
          <input type="date" name="end" class="form-control" style="width:60%" value={{end}}>
        </div>
      </div>
      <div class="form-group">
        <label for="comment">Description</label>
        <textarea class="form-control" name="description" rows="5"></textarea>
      </div>
      <input type="submit" class="btn btn-info" value="Submit">
  </div>
</div>
