<body>
  <h1>View all posts</h1>

<!-- Iterate over al the posts using {{#each posts}} {{title}} {{/each}} to
display them on the page. Add a couple of buttons to sort ascending/descending
and to create new post! -->


<!-- YOUR CODE HERE -->
  <div class = 'posts'>
      {{#each posts}}
        <h2>{{title}} </h2>
        <h3>{{name}} </h3>
        <h3>{{date}} </h3>
        <p> {{text}} </p>
      {{/each}}
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <a href = 'http://localhost:3000/posts/?order=ascending'><button type="submit" action = '/posts?order=ascending' class="btn btn-default">Ascend</button></a>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <a href = 'http://localhost:3000/posts/?order=descending'><button type="submit" action = '/posts?order=descending'class="btn btn-default">Descend</button></a>
        </div>
      </div>
  </div>


</body>
</html>
