<h1>{{project.title}}</h1>
<h3>Category: {{project.category}}</h3>
<h3>Fundraising goal: ${{project.goal}}</h3>
<h3>Total contributions: ${{project.raised}}</h3>
<div class="progress">
  <div class="progress-bar" role="progressbar"
       style="width: {{project.progress}}%;min-width: 2em;">
    {{project.progress}}%
  </div>
</div>
<h3>Start date: {{start}}</h3>
<h3>End date: {{end}}</h3>
<h3>About this project:</h3>
<p>{{project.description}}</p>
<h3>Contributions:</h3>
<div id="contributions">
  {{#each project.contributions}}
    <div class="well">
      <h4>{{name}} contributed ${{amount}}</h4>
      <p>{{comment}}</p>
    </div>
  {{/each}}
</div>
<h3>Contribute to this project:</h3>
<form>
  <div class="form-group" id="name-group">
    <label class="control-label" for="name" id="name-label"></label>
    <input type="text" name="name" class="form-control" id="name"
           placeholder="Your Name" value="{{data.name}}">
  </div>
  <div class="form-group" id="comment-group">
    <input type="text" name="comment" class="form-control" id="comment"
           placeholder="Comment" value="{{data.comment}}">
  </div>
  <div class="form-group" id="amount-group">
    <label class="control-label" for="amount" id="amount-label"></label>
    <div class="input-group">
      <div class="input-group-addon">$</div>
      <input type="text" class="form-control" id="amount" name="amount"
             placeholder="Amount" value="{{data.amount}}">
      <div class="input-group-addon">.00</div>
    </div>
  </div>
  <button type="submit" class="btn btn-primary" id="submit">Contribute</button>
</form>
<br/>
<a href="/">Back to all projects</a>
